<!-- app/views/shared/_delete_modal.html.erb -->

<div id="deleteModal" class="modal">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <h2>Confirm Deletion</h2>
    <p>Are you sure you want to delete this construction site?</p>
    <div class="modal-actions">
      <%= button_to 'Delete', '', method: :delete, class: 'delete-button', id: 'confirmDeleteButton' %>
      <button class="cancel-button">Cancel</button>
    </div>
  </div>
</div>
