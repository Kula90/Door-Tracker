<!-- app/views/construction_sites/edit.html.erb -->

<div class="edit-construction-site">
  <h1>Edit Construction Site</h1>

  <%= form_with(model: @construction_site, local: true) do |form| %>
    <% if @construction_site.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@construction_site.errors.count, "error") %> prohibited this construction site from being saved:</h2>
        <ul>
          <% @construction_site.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "Name:", for: 'edit_construction_site_name' %>
      <%= form.text_field :name, id: 'edit_construction_site_name' %>
    </div>

    <div class="field">
      <%= form.label :floors, "Floors:", for: 'edit_construction_site_floors' %>
      <%= form.number_field :floors, id: 'edit_construction_site_floors' %>
    </div>

    <div class="actions">
      <%= form.submit "Update Construction Site" %>
    </div>
  <% end %>
</div>
